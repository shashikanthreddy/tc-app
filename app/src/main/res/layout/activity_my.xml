    <RelativeLayout
        android:id="@+id/user_p_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tpink">
        <RelativeLayout
            android:id="@+id/user_p_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_p_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_p_image"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/user_p_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="@dimen/user_p_name"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/user_p_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_p_name"
                android:text="Description of the app"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/user_p_status"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_p_card"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/login_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/user_p_name"/>

            <EditText
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/login_title"
                android:padding="8dp"
                android:layout_marginTop="32dp"
                android:hint="Username / Email"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/uname"
                android:padding="8dp"
                android:hint="Password"
                android:password="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/password">
                <LinearLayout
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/password"
                    android:layout_marginTop="32dp"
                    android:padding="8dp"
                    android:background="@color/tpink"
                    android:onClick="open">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Login"
                        android:gravity="center"
                        android:textSize="@dimen/list_card_user_name"
                        android:textColor="@color/white"/>
                    </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:text="or Register"
                    android:textSize="20dp"
                    android:onClick="goToReg"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
