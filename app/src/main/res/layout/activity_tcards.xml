                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/note_user_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    android:layout_marginRight="8dp"/>
                <RelativeLayout
