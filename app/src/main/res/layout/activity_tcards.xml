                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/note_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of the user"
                        android:textSize="@dimen/note_user_name"
                        android:textColor="@color/note_user_name"/>
                    <TextView
                        android:id="@+id/note_card_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/note_user_name"
                        android:text="10 min ago"
                        android:textColor="@color/note_card_time"
                        android:textSize="@dimen/note_card_time"/>
                </RelativeLayout>
